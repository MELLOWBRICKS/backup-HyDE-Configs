#!/bin/bash
sudo echo -e "\nðŸ”„ Updating system with pacman..."
sudo pacman -Syu

echo -e "\nðŸš€ Updating system with paru..."
paru -Syu

echo -e "\nðŸ“¦ Updating flatpak packages..."
flatpak update --assumeyes

echo -e "\nðŸ—‘ï¸ Removing orphaned packages..."
orphans=$(pacman -Qdtq 2>/dev/null)
if [ -n "$orphans" ]; then
  sudo pacman -Rns --noconfirm $orphans
else
  echo "âœ… No orphaned packages found."
fi

echo -e "\nðŸ§½ Cleaning unused flatpak runtimes..."
flatpak uninstall --unused --assumeyes

echo -e "\nðŸ§¹ Cleaning temporary directories..."
sudo rm -rf /tmp/*
sudo rm -rf /var/tmp/*

echo -e "\nðŸŽ‰ System update and cleanup complete!
"
