#!/bin/bash
sudo echo "ğŸ”„ Updating system with pacman..."
sudo pacman -Syu 

echo -e "\nğŸš€ Updating AUR packages with yay..."
yay -Syu 

echo -e "\nğŸ“¦ Updating flatpak packages..."
flatpak update --assumeyes

echo -e "\nğŸ—‘ï¸ Removing orphaned packages..."
orphans=$(pacman -Qdtq 2>/dev/null)
if [ -n "$orphans" ]; then
    sudo pacman -Rns $orphans
else
    echo "âœ… No orphaned packages found."
fi

echo -e "\nğŸ§½ Cleaning unused flatpak runtimes..."
flatpak uninstall --unused --assumeyes

sudo rm -rf /tmp/*
sudo rm -rf /var/tmp/*



echo -e "\nğŸ‰ System update and cleanup complete!"
