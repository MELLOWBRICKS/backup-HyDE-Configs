#!/bin/bash
sudo echo -e "\033[1;34müìÇ  Restoring dotfiles from backup with confirmations...\033[0m"

dotfiles="$HOME/backup-HyDE-Configs/"

declare -A paths=(
    ["hyde"]="$HOME/.config/hyde/"
    ["hypr"]="$HOME/.config/hypr/"
    ["fastfetch"]="$HOME/.config/fastfetch/"
    ["kitty"]="$HOME/.config/kitty/"
    ["nvim"]="$HOME/.config/nvim/"
    ["bin"]="$HOME/.local/bin/"
)

for folder in "${!paths[@]}"; do
    src="$dotfiles$folder/"
    dest="${paths[$folder]}"

    echo -e "\n\033[0;36m‚Üí Found backup: $src\033[0m"
    echo -e "üí¨  Do you want to overwrite contents of \033[1;33m$dest\033[0m? (\033[0;32myes\033[0m/\033[1;31mno\033[0m)"
    read -p "‚û§ " answer

    case "$answer" in
        yes|y|Y|Yes|YES)
            mkdir -p "$dest"
            cp -r "$src"* "$dest"
            echo -e "\033[0;32m‚úÖ Restored $folder ‚Üí $dest\033[0m"
            ;;
        no|n|N|No|NO)
            echo -e "\033[1;33m‚è≠Ô∏è  Skipped $folder.\033[0m"
            ;;
        *)
            echo -e "\033[0;31m‚ùå Invalid input. Skipping $folder.\033[0m"
            ;;
    esac
done

sudo echo -e "\n\033[1;32m‚úÖ Restore Process Completed!\033[0m"
