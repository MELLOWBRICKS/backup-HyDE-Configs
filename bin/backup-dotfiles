#!/bin/bash
sudo echo "Taking a backup of dotfiles"

dotfiles="$HOME/backup-HyDE-Configs/"
hyde="$HOME/.config/hyde/"
hypr="$HOME/.config/hypr/"
ff="$HOME/.config/fastfetch/"
kitty="$HOME/.config/kitty/"
nvim="$HOME/.config/nvim/"

global_scripts="$HOME/.local/bin/"

echo -e "\nðŸš€ Taking backup of $hyde ..."
cp -r $hyde $dotfiles
echo -e "\nðŸš€ Taking backup of $hypr ..."
cp -r $hypr $dotfiles
echo -e "\nðŸš€ Taking backup of $ff ..."
cp -r $ff $dotfiles
echo -e "\nðŸš€ Taking backup of $kitty ..."
cp -r $kitty $dotfiles
echo -e "\nðŸš€ Taking backup of $nvim ..."
cp -r $nvim $dotfiles
echo -e "\nðŸš€ Taking backup of $global_scripts ..."
cp -r $global_scripts $dotfiles

sudo echo -e "\nBackup Completed!!"
