#!/bin/bash
sudo echo "Taking a backup of dotfiles"

dotfiles="$HOME/backup-HyDE-Configs/"
hyde="$HOME/.config/hyde/"
hypr="$HOME/.config/hypr/"
ff="$HOME/.config/fastfetch/"
kitty="$HOME/.config/kitty/"
nvim="$HOME/.config/nvim/"

global_scripts="$HOME/.local/bin/"

echo -e "\nğŸš€ Taking backup of $hyde ..."
cp -r $hyde $dotfiles
echo -e "\nğŸš€ Taking backup of $hypr ..."
cp -r $hypr $dotfiles
echo -e "\nğŸš€ Taking backup of $ff ..."
cp -r $ff $dotfiles
echo -e "\nğŸš€ Taking backup of $kitty ..."
cp -r $kitty $dotfiles
echo -e "\nğŸš€ Taking backup of $nvim ..."
cp -r $nvim $dotfiles
echo -e "\nğŸš€ Taking backup of $global_scripts ..."
cp -r $global_scripts $dotfiles

sudo echo -e "\nBackup Completed!!"

#!/bin/bash

echo -e "\033[0;36mîœ‰  GitHub Backup Assistant\033[0m"
echo -e "ğŸ’¬  Do you want to push the backup to GitHub? (\033[0;32myes\033[0m/\033[1;33mno\033[0m)"
read -p "â¤ " answer

case "$answer" in
    yes|y|Y|Yes|YES)
        echo -e "\033[0;32mâœ… Committing and pushing to GitHub...\033[0m"
        git add .
        git commit -m "last backup on $(date)"
        git push origin main
        echo -e "\033[0;32mâœ… Backup pushed successfully.\033[0m"
        ;;
    no|n|N|No|NO)
        echo -e "\033[1;33mâŒ Committing only (no push)...\033[0m"
        git add .
        git commit -m "last backup on $(date)"
        echo -e "\033[1;33mâœ… Backup committed locally.\033[0m"
        ;;
    *)
        echo -e "\033[0;31mâŒ Invalid input. Please answer yes or no.\033[0m"
        ;;
esac
